@model Auctisafe.ViewModel.ProductDetailsViewModel
@{
    ViewBag.Title = "ProductDetails";
}
<style>
    p {
        font-size: 20px;
    }
</style>

<h3>Auctioneer Details</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Full Name
            </th>
            <th>Phone Number</th>
           <th>
               Address
           </th>
            <th>
                Actions
            </th>
        </tr>
            <tr>

                <td>@Model.AuctioneerDetail.First_name @Model.AuctioneerDetail.Last_name</td>
                <td>@Model.AuctioneerDetail.Phone_number</td>
                <td>@Model.AuctioneerDetail.Address</td>
                <td>
                    <a type="button" href="~/Admin/Userdetail?id=@Model.AuctioneerDetail.User_ID" class="btn btn-secondary btn-sm">Details & Update</a>
                </td>
            </tr>
        

    </thead>
</table>
<div style="width: 100%; display: flex; justify-content: space-between">
    <h3>Product Details</h3>
    @if (Model.status.Status == "A")
    {
        <button class="btn btn-danger btn-sm deactivate" id="@Model.product.Product_ID">Deactivate Auction</button>
    }
    else
    {
        <button class="btn btn-secondary btn-sm Activate" id="@Model.product.Product_ID">Activate Auction</button>
    }

</div>
<div class="row">
    <div class="col-md-4">
        <p>Product Name : <b>@Model.product.name</b></p>
    </div>
    <div class="col-md-8">
        <p>Description : <b>@Model.product.description</b></p>
    </div>
    @*<div class="col-md-4"></div>*@
</div>
<div class="row">
    <div class="col-md-4">
        <p>Used Status : <b>@Model.product.used</b></p>
    </div>
    <div class="col-md-4">
        <p>Price : <b>@Model.product.price</b></p>
    </div>

</div>
<div class="row">
    <div class="col-md-4">
        <img src="~/images/@Model.product.image" style="width: 100%" />
    </div>
</div>

<h3>Auction Details</h3>
<div class="row">
    <div class="col-md-4">
        <p>Start Date : <b>@Model.auction.Start_date</b></p>
    </div>
    <div class="col-md-4">
        <p>End Date : <b>@Model.auction.End_date</b></p>
    </div>
    <div class="col-md-4">
        <p>Increment : <b>@Model.auction.increament</b></p>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-4">
        <p>Decreament : <b>@Model.auction.decreament</b></p>
    </div>
    <div class="col-md-4">
        <p>Auto Accept Amount : <b>@Model.auction.auto_accept_amount</b></p>
    </div>
    <div class="col-md-4">
        <p>Interval In Hours : <b>@Model.auction.IntervalinHours</b></p>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-4">
        <p>Updated Price : <b>@Model.auction.UpdatedPrice</b></p>
    </div>
    <div class="col-md-4">
        <p>Current Date : <b>@Model.auction.currentdate</b></p>
    </div>

</div>
<h3>Biddings</h3>
<table class="table table-hover">
    <tr>
        <th>Bidder Name</th>
        <th>Amount</th>
        <th>Date</th>
        <th>Action</th>
    </tr>
    @foreach (var items in Model.biddingdetails)
    {
        <tr>
            <td>@items.bidder.First_name @items.bidder.Last_name</td>
            <td>@items.bidding.Amount</td>
            <td>@items.bidding.Date</td>
            <td>
                <a class="btn btn-danger btn-sm" type="button" href="~/Admin/RollBackBid?id=@items.bidding.Bid_ID">Rollback Bid</a>
                <a class="btn btn-secondary btn-sm" type="button" href="~/Admin/UserDetail?id=@items.bidder.User_ID">Bidder Detail</a>
            </td>
        </tr>
    }

</table>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
    $(".deactivate").click(function () {
        var id = $(this).attr('id');
        $.ajax({
            type: "get",
            url: '@Url.Action("DeactivateProduct","Admin")',
            data: { productid: id },
            success: function (data) {
                location.reload();
            }
        })
    })
    $(".Activate").click(function () {
        var id = $(this).attr('id');
        $.ajax({
            type: "get",
            url: '@Url.Action("ActivateProduct","Admin")',
            data: { productid: id },
            success: function (data) {
                location.reload();
            }
        })
    })
</script>