@model Auctisafe.ViewModel.UserdetaiandproductslViewModel
@{
    ViewBag.Title = "Userdetail";
}

<h3>User Detail</h3>
<div class="card" style="padding: 10px">
    <form id="updateform">
        <div class="row">
            <div class="col-md-4" hidden>
                <label>ID</label>
                <input type="text" class="form-control" value="@Model.userdetails.User_ID" name="User_ID" />
            </div>
            <div class="col-md-4">
                <label>First Name</label>
                <input type="text" class="form-control" value="@Model.userdetails.First_name" name="First_name" />
            </div>
            <div class="col-md-4">
                <label>Last Name</label>
                <input type="text" class="form-control" value="@Model.userdetails.Last_name" name="Last_name" />
            </div>
            <div class="col-md-4">
                <label>Phone Number</label>
                <input type="text" class="form-control" value="@Model.userdetails.Phone_number" name="Phone_number" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label>Address</label>
                <input type="text" class="form-control" value="@Model.userdetails.Address" name="Address" />
            </div>
            <div class="col-md-4">
                <label>CNIC</label>
                <input type="text" class="form-control" value="@Model.userdetails.CNIC" name="CNIC" />
            </div>
            <div class="col-md-4">
                <label>Address</label>
                <input type="text" class="form-control" value="@Model.usercridentail.Email" name="Email" />
            </div>
        </div>
        <div class="row">

            <div class="col-md-4">
                <label>CNIC</label>
                <select class="form-control" name="Status">
                    @if (Model.usercridentail.Status == "A")
                    {
                        <option selected value="A">Activate</option>
                        <option value="D">Deactivate</option>
                        <option value="P">Pending</option>
                    }
                    else if (Model.usercridentail.Status == "P")
                    {
                        <option value="A">Activate</option>
                        <option value="D">Deactivate</option>
                        <option selected value="P">Pending</option>
                    }
                    else
                    {
                        <option value="A">Activate</option>
                        <option selected value="D">Deactivate</option>
                        <option value="P">Pending</option>
                    }
                </select>
                @*<input type="text" class="form-control" value="@Model.usercridentail.Password" name="CNIC" />*@
            </div>

        </div>
    </form>
    <br />
    <div class="row">

        <div class="col-md-4">
            <button type="button" id="update" class="btn btn-secondary">Update</button>
        </div>
    </div>
</div>
<br />
<h3>User Auctions</h3>
<br />
<div class="card">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Auction Type</th>
                <th>Auctioneer Name</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var items in Model.auctions)
            {
                <tr>
                    <td>@items.ProductName</td>
                    <td>@items.Auction</td>
                    <td>@items.Auctioneer_Name</td>
                    <td>@items.status</td>
                    <td>
                        <a class="btn btn-secondary btn-sm" type="button" href="~/Admin/ProductDetails?id=@items.AuctionID">Details</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<br />
<h3>User Recent Biddings</h3>
<br />
<div class="card">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Bidding Date</th>
                <th>Bidding Amount</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var items in Model.Biddings)
            {
                <tr>
                    <td>@items.Date</td>
                    <td>@items.Amount</td>


                </tr>
            }
        </tbody>
    </table>
</div>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
    $("#update").click(function () {
        $.ajax({
            type: "get",
            url: '@Url.Action("UpdateUserDetail", "Admin")',
            data: $("#updateform").serialize() ,
            success: function (data) {
                alert("sasd");
            }
        })
    })
</script>
