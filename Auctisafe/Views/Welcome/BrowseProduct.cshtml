@model List<Auctisafe.Models.Product>
@{
    ViewBag.Title = "BrowseProduct";
}

<div class="inner-banner">
    <div class="container">
        <h2 class="inner-banner-title wow fadeInLeft" data-wow-duration="1.5s" data-wow-delay=".2s">
            Shop
        </h2>
        <nav class="breadcrumb" aria-label="breadcrumb">
            <div id="primary" class="content-area"><main id="main" class="site-main" role="main"><nav class="woocommerce-breadcrumb"><a href="https://www.bidout-wp.egenslab.com">Home</a>&nbsp;&#47;&nbsp;Shop</nav>
        </nav>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center WC_Product_Wrap">
        <div class="product-toolbox">

        </div>
        <div class="col-lg-9">
            <div class="products columns-3 clearfix">
                <div class="row gy-4">
                    @foreach (var item in Model)
                    {
                    <div class="col-xl-4 col-md-6 col-sm-12">
                        <div class="eg-card auction-card1">
                            <div class="auction-img">
                                <img loading="lazy" style="height: 220px" src="~/Images/@item.image" class="attachment-woocommerce_thumbnail size-woocommerce_thumbnail" alt="" decoding="async"  sizes="(max-width: 600px) 100vw, 600px" />													<div class="auction-timer">
                                    
                                </div>
                            </div>
                            <div class="auction-content">
                                <h2 class="woocommerce-loop-product__title">@item.name</h2>
                                <p>
                                    <span class="price"><span class="auction-price current-bid" data-auction-id="737" data-bid="840" data-status="running"><span class="current auction">Starting price: </span> <span class="woocommerce-Price-amount amount">@item.price<span class="woocommerce-Price-currencySymbol">&#036;</span></span></span></span>
                                </p>
                                <div class="auction-card-bttm">
                                    <a href="~/product/details/@item.Product_ID" data-quantity="1" class="button product_type_auction" data-product_id="737" data-product_sku="" aria-label="Read more about &ldquo;Black Analogue Watch&rdquo;" aria-describedby="" rel="nofollow">Bid now</a>															<div class="share-area">
                                        <ul class="social-icons d-flex">
                                            <li><a href="http://www.facebook.com/sharer/sharer.php?u=https://www.bidout-wp.egenslab.com/product/black-analogue-watch/"><i class="bx bxl-facebook"></i></a></li>
                                            <li><a href="http://www.twitter.com/share?url=https://www.bidout-wp.egenslab.com/product/black-analogue-watch/"><i class="bx bxl-twitter"></i></a></li>
                                            <li><a href="https://pinterest.com/pin/create/button/?url=https://www.bidout-wp.egenslab.com/product/black-analogue-watch/"><i class="bx bxl-instagram"></i></a></li>
                                            <li><a href="http://www.instagram.com/share?url=https://www.bidout-wp.egenslab.com/product/black-analogue-watch/"><i class="bx bxl-pinterest"></i></a></li>
                                        </ul>
                                        <div>
                                            <div class="share-btn"><i class='bx bxs-share-alt'></i></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>	
                    }
                </div>
            </div>					<!-- Shop pagination -->
            <!-- end pagination  -->

        </div>
        <div class="col-md-12 col-lg-3 col-xl-3">
            <div class="widget-area">
                <div id="block-37" class="shop-widget-item widget_block widget_search">
                    <form role="search" method="get"  class="wp-block-search__button-outside wp-block-search__icon-button wp-block-search">
                        <label class="wp-block-search__label" for="wp-block-search__input-1">Search Products</label><div class="wp-block-search__inside-wrapper ">
                            <input class="wp-block-search__input" id="wp-block-search__input-1" placeholder="Search products…" value="" type="search" name="name" required /><button aria-label="Search" class="wp-block-search__button has-icon wp-element-button" type="submit">
                                <svg class="search-icon" viewBox="0 0 24 24" width="24" height="24">
                                    <path d="M13 5c-3.3 0-6 2.7-6 6 0 1.4.5 2.7 1.3 3.7l-3.8 3.8 1.1 1.1 3.8-3.8c1 .8 2.3 1.3 3.7 1.3 3.3 0 6-2.7 6-6S16.3 5 13 5zm0 10.5c-2.5 0-4.5-2-4.5-4.5s2-4.5 4.5-4.5 4.5 2 4.5 4.5-2 4.5-4.5 4.5z"></path>
                                </svg>
                            </button>
                        </div>
                    </form>
                </div>
                </div>
            </div>
        
        <!-- WooCommerce Default sidebar  -->
    </div>
    
</div>

